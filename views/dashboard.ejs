<%- include('partials/header') %>
  
<div class="img">
  <% if(USER.googleId==undefined){ %>
    <img id="imgID"src="<%=IMG%>" alt="">
  <% } %>
  <% if(USER.googleId!==undefined){ %>
    <img id="imgID" src="<%=IMG%>" alt="">
 <% } %>
</div>
  <% OWNPOSTS.forEach(function(element){  %>
    <div class="box-own">
      <div class="container ">
        <div class="form-group">
              <h3 class="title"><%=element.title%></h3>
              <div class="article-content"><p><%=element.content%></p></div>
              <hr>
              <img id="imgPost" src="<%=element.imageURL%>" alt="">
              <p class="bottom-right"><%=element.editDate%> </p>
              <p class="bottom-right"><%=element.date%> </p>
               
          </div>
          <!--<form action="info" method="post">
            <input type="hidden" name="postId" value="<%=element._id%>"></input>
          <input type="hidden" name="userId" value="<%=USER%>"></input>
          </form>-->
          
          
          <form action="/deletePost" method="post">
            
            <input type="hidden" name="postURL" value="<%=element.imageURL%>"></input>
            <input type="hidden" name="postImgID" value="<%=element.imageID%>"></input>
            <input type="hidden" name="postId" value="<%=element._id%>"></input>
            
            <button style="height: 35px;width:35px ;background-color:#8e9fa3; position:relative ;bottom: 2%;left:92%" class="btn btn-sm btn-dark" type="submit" name="button" ><img style=" height: 30px;width:20px" src="css/delete.png" alt=""></button>
        </form>
        <form class="form-inline" onsubmit="return false;">
          <a href="/edit/<%=element.imageID%>" type="button" onclick="onid(this);">Edit Post</a>
        </form>
      </div>
    </div>

  <% })  %>
 
  


<%- include('partials/footer') %>
